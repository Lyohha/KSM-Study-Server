version: 2
ethernets:
  eth0:
    dhcp4: false
    addresses:
      - 192.168.122.${ip_address}/24
    link-local: [ ipv4 ]
    routes:
      - to: default
        via: 192.168.122.1
        metric: 100
    match:
      macaddress: ${mac_address}
    nameservers:
      addresses:
      - 1.1.1.1
      - 8.8.8.8
